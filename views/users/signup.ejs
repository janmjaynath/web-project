<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
      <h2 class="col-6 offset-3" >Signup on Wanderlust</h2>

      <br><br><br>
    
      <div class="col-6 offset-3" >

        <form action="/signup" method="POST" class="needs-validation" novalidate>

          <div class="mb-3">
            <lable for="username" class="form-label" >Username</lable>
            <input name="username" 
            id="username"
            type="text" 
            class="form-control" 
            required/>
            <div class="invalid-feedback">username is required!</div>
            <div class="valid-feedback"> username looks Good</div>
          </div>

          <div class="mb-3">
            <lable for="email" class="form-label" >Email</lable>
            <input name="email" 
            id="email"
            type="text" 
            class="form-control" 
            required/>
            <div class="invalid-feedback">Email is required!</div>
            <div class="valid-feedback"> Email looks Good</div>
          </div>

          <div class="mb-3">
            <lable for="password" class="form-label" >Password</lable>
            <input name="password" 
            id="password"
            type="text" 
            class="form-control" 
            required/>
            <div class="invalid-feedback">password is required!</div>
            <div class="valid-feedback"> Password looks Good</div>
          </div>
          <button class="btn">Signup</button>
        </form>
        <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> 

        </div>
        </div>
      